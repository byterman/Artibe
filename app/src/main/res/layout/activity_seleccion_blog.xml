<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_default"
    tools:context=".crear.seleccionBlog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="339dp"
        android:layout_height="645dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="67dp"
        android:background="@color/black_veryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="77dp"
            android:gravity="center"
            android:text="Â¿Que tipo de blog quieres?"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/img_Video"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton

            android:id="@+id/img_Text"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_marginBottom="183dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_Video"
            app:srcCompat="@drawable/img" />

        <ImageButton

            android:id="@+id/img_Video"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/img_Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_IMG"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:srcCompat="@drawable/img" />

        <ImageButton

            android:id="@+id/img_IMG"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="67dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_Video"
            app:layout_constraintEnd_toStartOf="@+id/img_Video"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_Video"
            app:srcCompat="@drawable/img" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>